# RAG AI Agent - Environment variables
# Copy to .env and fill in values. Do not commit .env.

# ============== LLM ==============
# OpenAI (default)
OPENAI_API_KEY=

# Optional: model overrides
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_MODEL=gpt-4o

# Alternative: Anthropic
ANTHROPIC_API_KEY=
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ============== LangSmith (tracing) ==============
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=

# ============== Embeddings ==============
# Usually same provider as LLM; set if using a separate embedding service
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# OPENAI_EMBEDDING_DIMENSIONS=1536

# ============== Vector store ==============
# Local path (Chroma, FAISS, etc.)
VECTOR_STORE_PATH=./data/vectorstore

# Or Pinecone
# PINECONE_API_KEY=
# PINECONE_INDEX=
# PINECONE_ENVIRONMENT=

# Or other (e.g. Weaviate, Qdrant) - add vars as needed

# ============== Data & uploads ==============
# Where to read uploaded documents from
# UPLOADS_DIR=./data/uploads

# ============== App ==============
# LOG_LEVEL=INFO
# DEBUG=false
# HOST=0.0.0.0
# PORT=8000
